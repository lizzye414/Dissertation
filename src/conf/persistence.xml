<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="BrinsburyAnimalPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.brinsburyanimal.entities.HerptileRecordEnt</class>
    <class>com.brinsburyanimal.entities.HealthCheckEnt</class>
    <class>com.brinsburyanimal.entities.BirdMammalRecordEnt</class>
    <class>com.brinsburyanimal.entities.FishRecordEnt</class>
    <class>com.brinsburyanimal.entities.SpeciesEnt</class>
    <class>com.brinsburyanimal.entities.AnimalEnt</class>
    <class>com.brinsburyanimal.entities.FedEnt</class>
    <class>com.brinsburyanimal.entities.AccommodationEnt</class>
    <class>com.brinsburyanimal.entities.FeedingEnt</class>
    <class>com.brinsburyanimal.entities.SloughEnt</class>
    <class>com.brinsburyanimal.entities.CleaningEnt</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/brinsburyanimal"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="monkey4Dog"/>
    </properties>
  </persistence-unit>
</persistence>
